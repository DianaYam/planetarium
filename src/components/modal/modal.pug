
mixin modal(args)
	.modal(class!=attributes.class id!=attributes.id)
		.modal__inner
			.modal__content
				.modal__close
				
				form.modal-form(action="#")
					+ field({
				    type: 'text',
				    name: 'name',
				    placeholder: 'Ваше имя',
				    errorMessage: 'Введите имя на кириллице'
					})(class="modal-form__field")

					+ field({
				    type: 'phone',
				    name: 'phone',
				    placeholder: '+ 7 (___) ___-__-__',
				    errorMessage: 'Некорректный телефон'
					})(class="modal-form__field")

					+ button({
				    text: 'Заказать',
				    modifier: BTN_PR,
				    type: 'submit'
					})(class="modal-form__btn")

				.modal-order-message
					h3.modal-order-message__header Заказ в обработке!
					p.modal-order-message__text В ближайшее время с вами по телефону свяжется оператор для уточнения деталей